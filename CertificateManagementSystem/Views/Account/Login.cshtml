@model LoginModel

<div class="row section">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel">
            <h3 class="text-center">Авторизация пользователя</h3>
            <form class="p-4" method="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="UserLogin"></label>
                    <div class="input-group">
                        <input class="form-control" asp-for="UserLogin" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                X
                            </div>
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="UserLogin"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserPassword"></label>
                    <div class="input-group">
                    <input class="form-control" asp-for="UserPassword" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                X
                            </div>
                        </div>
                    </div>

                    <span class="text-danger" asp-validation-for="UserPassword"></span>
                </div>
                <div class="input-group form-check">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>
                <div class="text-danger validationSummary" asp-validation-summary="ModelOnly"></div>
                <button class="btn btn-success" type="submit">Войти</button>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>